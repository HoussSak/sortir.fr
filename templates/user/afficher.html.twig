{% extends 'base.html.twig' %}

{% block body %}
<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            {% if user.photo %}
                                <img src="{{ asset('uploads/user/' ~ user.photo) }}" alt="{{ user.pseudo }}" class="w-100" style="max-width: 300px; max-height: 300px;">
                            {% else %}
                                <img src="{{ asset('img/default_image.png') }}" alt="Fallback" class="w-100" style="max-width: 300px; max-height: 300px;">
                            {% endif %}
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">


                                <div class="d-flex align-items-center mb-3 pb-1">

                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                    <a href="{{ path('app_login') }}"><img src="{{ asset('img/Logo.svg') }} "width="200" alt="sortir.com"></a>
                                    <span class="h2 fw-bold mb-0">{{ user.pseudo }}</span>
                                </div>

                                <div>
                                    <p>Prénom : <b>{{ user.prenom }}</b></p>
                                </div>


                                <div>
                                    <p>Nom : <b>{{ user.nom }}</b></p>
                                </div>


                                <div>
                                    <p>Téléphone : <b>{{ user.telephone }}</b></p>
                                </div>


                                <div>
                                    <p>Email : <b>{{ user.email }}</b></p>
                                </div>


                                <div>
                                    <p>Ville de rattachement : <b>{{ user.site.nom }}</b></p>
                                </div>


                                <a href="{{ path('app_home') }}"><button type="submit" class="btn btn-dark">Retour</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}

{% block title %}

    {{ parent()  }} | Profil

{% endblock %}


{% block footer %}
    {{ parent() }}
{% endblock %}



