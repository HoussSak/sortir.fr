{% extends 'base.html.twig' %}

{% block title %}Gestion des villes{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container my-5">
        <div class="bg-white p-4 rounded shadow-sm">
            <h3 class="mb-4 border-bottom">GÃ©rer les villes</h3>

            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Ville</th>
                        <th scope="col">Code postal</th>
                        <th scope="col" colspan="2" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if villes %}
                        {% for ville in villes %}
                            <tr>
                                <th scope="row">{{ ville.id }}</th>
                                <td>{{ ville.nom }}</td>
                                <td>{{ ville.codePostal }}</td>
                                <td class="text-center"><a href="{{ path('app_supprimer_ville', {id: ville.id}) }}" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Supprimer</a></td>
                                <td class="text-center"><a href="#" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i> Modifier</a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    
                    {{ form_start(villeForm, {'attr': {'class': 'my-3'}}) }}
                        <tr>
                            <th scope="row"></th>
                            <td>{{ form_row(villeForm.nom) }}</td>
                            <td>{{ form_row(villeForm.codePostal) }}</td>
                            <td colspan="2" class="text-center"><button class="btn btn-secondary btn-sm"><i class="bi bi-plus"></i> Ajouter</button></td>
                        </tr>
                    {{ form_end(villeForm) }}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
